{
  "activeProvider": "claude_code_sdk",
  "providers": {
    "claude_code_sdk": {
      "enabled": true,
      "model": "claude-sonnet-4-6",
      "maxTurns": 50,
      "allowedTools": [
        "Read",
        "Write",
        "Grep",
        "Bash",
        "LS",
        "WebSearch",
        "WebFetch"
      ],
      "nodeScriptPath": "app/llm/sdk_bridge/claude_sdk_bridge.js",
      "sessionTimeout": 3600
    },
    "anthropic_api": {
      "enabled": true,
      "model": "claude-sonnet-4-6",
      "endpoint": "https://api.anthropic.com/v1/messages",
      "apiKeyEnv": "ANTHROPIC_API_KEY",
      "maxTokens": "8000",
      "temperature": "1.0"
    }
  }
}
