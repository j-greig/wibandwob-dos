{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wibwob.local/contracts/protocol/v1/capabilities.schema.json",
  "title": "WibWob Command Capabilities",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "commands"
  ],
  "properties": {
    "version": {
      "type": "string",
      "minLength": 1
    },
    "commands": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "description",
          "requires_path"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          },
          "requires_path": {
            "type": "boolean"
          }
        }
      }
    }
  }
}
